@model ProjectABeautyWeb.Models.Enquiry

@{
    ViewData["Title"] = "Create";
}


<div>
    <h4> Location </h4>
    <ul>
        <li>
            Opening Times -
            Address -
            Contact Number -
        </li>
    </ul>

</div>



<h4>Enquiry</h4>
<hr />

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                         <div class="form-group">
                            @Html.LabelFor( x => x.Name, new { @class = "control-label"})
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
                          </div>
                    </div>
                    <div class="form-group">
                         @Html.LabelFor( x => x.Email, new { @class = "control-label"})
                         @Html.TextBoxFor(x => x.Email, new { @class = "form-control"})
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                         @Html.LabelFor( x => x.ContactNumber, new { @class = "control-label"})
                         @Html.TextBoxFor(x => x.ContactNumber, new { @class = "form-control"})
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                         @Html.LabelFor( x => x.Note, new { @class = "control-label"})
                         @Html.TextAreaFor(x => x.Note,10,40,"")
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
        </div>
    </div>
}
<div>
    <a asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
